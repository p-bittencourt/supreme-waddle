[MASTER]
# Add third-party packages that pylint can't find during CI
extension-pkg-whitelist=pydantic,sqlalchemy,fastapi,dotenv

[MESSAGES CONTROL]
# Disable specific messages
disable=
    R0903, # too-few-public-methods
    C0103, # invalid-name
    C0301, # line-too-long
    W0614, # unused-wildcard-import
    W0401, # wildcard-import
    W0404, # reimported
    W0702, # bare-except
    E0401, # import-error
    W0718, # broad-exception-caught
    W0613, # unused-argument
    R0801, # duplicate-code
    W0107  # unnecessary-pass

[FORMAT]
max-line-length=120